            @Html.EditorFor(model => model.Product.ExpiredDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.ExpiredDate, "", new { @class = "text-danger" })
        </div>
    </div>

